# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        output_format = i3bar
}

order += "external_script 0"
order += "external_script 1"
order += "external_script 2"
order += "external_script 3"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
# order += "net_iplist" # this breaks on my desktop
order += "net_rate"
order += "wifi"
order += "battery_level"
order += "cpu_usage"
order += "load"
# order += "yubikey"
# order += "taskwarrior"
order += "whatismyip"
order += "dropboxd_status"
order += "tztime local"

external_script 0 {
    format = "Video Queue: {output}"
    script_path = "tsp | grep queued |wc -l"
    cache_timeout = 30
}

external_script 1 {
    format = "VPN: {output}"
    script_path = "~/bin/vpn-status"
    cache_timeout = 10

    on_click 1 = "exec ~/bin/vpn-launcher"
}

external_script 2 {
    format = "CI: {output}"
    script_path = "~/bin/ci-status"
    cache_timeout = 30

    on_click 1 = "exec xdg-open https://app.circleci.com/"
}

external_script 3 {
    format = "Toggl: {output}"
    script_path = "~/bin/toggl-status"
    cache_timeout = 30

    on_click 1 = "exec xdg-open https://track.toggl.com/timer"
}


wireless _first_ {
        format_up = "W: (%quality on %essid) %ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = ""
}

battery_level {
    battery_id = "all"
    hide_seconds = true
    format = "{percent}% {time_remaining}"
    # notification = true
}


wifi {
        # blocks = ‚Äú_‚ñÅ‚ñÇ‚ñÉ‚ñÑ‚ñÖ‚ñÜ‚ñá‚ñà‚Äù
}

net_iplist {
        format = '{format_iface}'
        format_iface = "\[{iface} {ip4}\]"
}

net_rate {
        # interfaces_blacklist = "docker*, lo, br*, veth*"
        all_interfaces = false
        interfaces = "enp7s0,wlan0"
        format = "{interface}: {down}ü†ó {up}ü†ï"
        si_units = true
        hide_if_zero = true
}

battery all {
        format = "%status %percentage %remaining"
        last_full_capacity = true
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "Load %1min %5min"
}

disk "/" {
        format = "Disk / %avail free"
}

cpu_usage {
        format = "CPU: %usage"
}
