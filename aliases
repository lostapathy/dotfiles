alias rg="rg -i"
alias Grep=grep
alias bat=batcat
alias fd=fdfind
alias journal="vim -c VimwikiMakeDiaryNote"
alias wiki="vim -c VimwikiIndex"
alias jekyll="bundle exec jekyll"
dirs="dirs -l -v"

# this connects via ssh with agent but without connection sharing, so once I disconnect agent is gone
alias ssha="ssh -A -S none"

# docker-compose reset
alias dcr="docker-compose build --pull && docker-compose pull && docker-compose rm && docker-compose up"
