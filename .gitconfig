  email = joe@lostapathy.com
  name = Joe Francis

[core]
  excludesfile = ~/.gitignore-global
  editor = vim

[alias]
  stat = status
  s = status -s
  amend = commit --amend --reuse-message=HEAD
  ds = diff --staged
  pf = push --force

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
