#!/bin/bash
# $1 = host:port
# $2 = username
# $3 = password
# $4 = title

# Just remove this so when we're working over port forwarding we don't have errors
rm ~/.config/freerdp/known_hosts -f

xfreerdp /sec:tls /admin /u:$2 /p:$3 /d:vc-mfg /v:$1 /cert-ignore /jpeg-quality:95 /jpeg +compression /t:$4 +clipboard +fonts -grab-keyboard /fonts /log-level:off /size:${RDP_SIZE:=1280x1024} /scale:${RDP_SCALE:=100}
